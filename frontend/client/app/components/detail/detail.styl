/*
  Lighbox
*/

.app-lightbox
  display none
  position absolute
  top 0
  left 0
  z-index 1
  width 100%
  height 100%
  background-color rgba(0,0,0, 0.5)
  
  .lightbox-image
    display none
    position fixed
    top 50%
    left 50%
    width auto
    height auto
    transform translate(-50%,-50%)
    
    &.active
      display block
  
  &.active
    display block

/*
  Dropdown
*/
.app-dropdown
  cursor pointer
  z-index 1
  position fixed
  left 50%
  bottom 50px
  width 75%
  transform translateX(-50%)
  background-color #f9690e
  color white
  font-weight 100
  letter-spacing 1.3px
  padding 15px 20px 15px 20px
  display flex
  flex-direction row
  justify-content center
  align-items center
  border-radius 5px
  box-shadow 1px 1px 5px 0px rgba(0, 0, 0, 0.2)
  
  .dropdown-list
    width 100%
    color black
    font-weight 300
    position absolute
    top 54px
    border-radius 5px
    margin 0 auto
    background-color white
    padding 0
    display none
    flex-direction column
    align-items center
    
    @media screen and (max-width: 1200px)
      top -165px
      
    @media screen and (min-width: 1200px)
      top 55px
    
    &.expanded
      display flex
      left 0px
    
    .list-item
      list-style none
      padding 10px 20px 10px 20px
      display block
      width 100%
      text-align center
      
      a
        color black
  /*
    state
    */    

  .dropdown-state-0
    display block
    
    &.hide
      display none

  .dropdown-state-1
    display none 
    
    &.active
      display block
  
  .dropdown-text
    margin-right 5px
    font-weight 500
    

  .dropdown-arrow
    @media screen and (min-width: 401px)
      max-width 30px
      
    @media screen and (max-width: 400px)
      max-width 10%
    
  .dropdown-arrow__desktop
    transform rotate(0deg)
    margin-top 2px
    
    &.flip
      transform rotate(180deg)
      
    
  .dropdown-arrow__mobile
    transform rotate(180deg)
    
    &.flip
      transform rotate(0deg)

  @media screen and (min-width: 1200px)
    width 300px
    padding 15px 40px 15px 40px
    right 25px
    top 25px
    /* reset */
    transform initial
    left initial
    bottom initial
    
  @media screen and (max-width: 768px)
    width 80%
