detail

  /* Gallery block */
  .carousel
    padding 0
    
    .img-container
      background-position center
      background-size cover
      height 500px

  /* Info block */
  .info
    min-height 200px
    padding 25px 0px 25px 0px
    margin-top: -1px; // due to left-floated contact div
    
    color gray
    background-color #3c3c3c

    /* Avatar component */
    .info-avatar
      margin 10px 0px 0px 0px;
      padding 10px
      
      /* Profile image */
      .image
        min-width: 64px
        max-width: 128px // limit responsiveness

    /* Contact info component */
    .info-contact
      padding 15px
      
      color #777
      
      font-size 16px
      
      /* Tex */
      .text--white
        color #f2f1ef
      
      /* Contact name */
      .name
        margin 0
        padding 0
        
      /* Contact url */
      .url
        display inline-flex
        margin 0
        padding 0
        
    .info-description
      padding 0px
      
    .info-services
      margin-top 10px
      color gray
      
    .info-maps

      .image
        display inline-block
        margin 10px 10px 0px 0px
        width 64px
  